<script>
document.getElementById('nanny-form').addEventListener('submit', function(e) {
  let isValid = true;
  const errors = document.querySelectorAll('.form-error');
  errors.forEach(err => err.classList.add('hidden'));

  // Validate full name
  const fullName = document.getElementById('full_name');
  if (!fullName.value.trim()) {
    document.getElementById('full_name_error').textContent = 'Please enter your full name.';
    document.getElementById('full_name_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate email
  const email = document.getElementById('email');
  if (!email.value.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
    document.getElementById('email_error').textContent = 'Please enter a valid email address.';
    document.getElementById('email_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate phone
  const phone = document.getElementById('phone');
  if (!phone.value.trim()) {
    document.getElementById('phone_error').textContent = 'Please enter your phone number.';
    document.getElementById('phone_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate location
  const location = document.getElementById('location');
  if (!location.value.trim()) {
    document.getElementById('location_error').textContent = 'Please enter your location.';
    document.getElementById('location_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate work areas (at least one checked)
  const workAreas = document.querySelectorAll('input[name="work_areas"]:checked');
  if (workAreas.length === 0) {
    document.getElementById('work_areas_error').textContent = 'Please select at least one area where you can work.';
    document.getElementById('work_areas_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate availability
  const availability = document.getElementById('availability');
  if (!availability.value) {
    document.getElementById('availability_error').textContent = 'Please select your availability.';
    document.getElementById('availability_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate years of experience
  const yearsExp = document.getElementById('years_experience');
  if (!yearsExp.value) {
    document.getElementById('years_experience_error').textContent = 'Please select your years of experience.';
    document.getElementById('years_experience_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate certifications (at least one checked)
  const certs = document.querySelectorAll('input[name="certs"]:checked');
  if (certs.length === 0) {
    document.getElementById('certs_error').textContent = 'Please select your certifications or "None of the above".';
    document.getElementById('certs_error').classList.remove('hidden');
    isValid = false;
  }

  // Validate experience summary
  const expSummary = document.getElementById('experience_summary');
  if (!expSummary.value.trim() || expSummary.value.trim().length < 50) {
    document.getElementById('experience_summary_error').textContent = 'Please provide a brief summary of your experience (minimum 50 characters).';
    document.getElementById('experience_summary_error').classList.remove('hidden');
    isValid = false;
  }

  if (!isValid) {
    e.preventDefault();
    // Smooth scroll to first error
    const firstError = document.querySelector('.form-error:not(.hidden)');
    if (firstError) {
      firstError.closest('div').scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  } else {
    // Show premium loader on valid submission
    document.getElementById('loader').classList.add('active');
  }
});

// Add smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if (target) {
      target.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });
});
</script>

