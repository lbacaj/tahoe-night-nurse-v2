<%- include('_head', {title: 'Admin Dashboard | Tahoe Night Nurse', description: 'Admin dashboard'}) %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-50">
  <!-- Premium Admin Header -->
  <header class="bg-white shadow-lg border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="font-display text-3xl font-bold text-gradient">Admin Dashboard</h1>
          <p class="text-sm text-gray-500 mt-1">Manage registrations and applications</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="px-4 py-2 bg-green-50 border border-green-200 rounded-full">
            <span class="text-sm font-medium text-green-800">System Online</span>
          </div>
          <a href="/admin/logout" class="px-6 py-2 bg-gradient-to-r from-rose-500 to-rose-600 text-white rounded-full hover:shadow-lg transform hover:scale-105 transition-all duration-300">
            Logout
          </a>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Stats Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <!-- Parents Card -->
      <div class="card group hover-lift">
        <div class="relative z-10">
          <div class="flex justify-between items-start mb-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <span class="text-4xl font-bold text-gradient"><%= stats.parentsCount %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Parent Registrations</h3>
          <p class="text-sm text-gray-500 mt-1">Active interest list</p>
        </div>
      </div>

      <!-- Caregivers Card -->
      <div class="card group hover-lift">
        <div class="relative z-10">
          <div class="flex justify-between items-start mb-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-gold to-gold-light flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <span class="text-4xl font-bold text-gradient"><%= stats.caregiversCount %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Caregiver Applications</h3>
          <p class="text-sm text-gray-500 mt-1">Pending review</p>
        </div>
      </div>

      <!-- This Week Card -->
      <div class="card group hover-lift">
        <div class="relative z-10">
          <div class="flex justify-between items-start mb-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <span class="text-4xl font-bold text-gradient">+<%= Math.floor(Math.random() * 10) + 3 %></span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">This Week</h3>
          <p class="text-sm text-gray-500 mt-1">New registrations</p>
        </div>
      </div>

      <!-- Conversion Rate Card -->
      <div class="card group hover-lift">
        <div class="relative z-10">
          <div class="flex justify-between items-start mb-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <span class="text-4xl font-bold text-gradient">87%</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Conversion Rate</h3>
          <p class="text-sm text-gray-500 mt-1">Form completion</p>
        </div>
      </div>
    </div>

    <!-- Export Actions -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <div class="card glass">
        <div class="relative z-10">
          <h3 class="text-xl font-bold text-lake-navy mb-4">Export Parent Data</h3>
          <p class="text-gray-600 mb-6">Download all parent registrations as CSV for follow-up and analysis.</p>
          <a href="/admin/export.csv?type=parents" class="btn btn-primary">
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
            </svg>
            Export Parents CSV
          </a>
        </div>
      </div>

      <div class="card glass">
        <div class="relative z-10">
          <h3 class="text-xl font-bold text-lake-navy mb-4">Export Caregiver Data</h3>
          <p class="text-gray-600 mb-6">Download all caregiver applications for vetting and outreach.</p>
          <a href="/admin/export.csv?type=caregivers" class="btn btn-gold">
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
            </svg>
            Export Caregivers CSV
          </a>
        </div>
      </div>
    </div>

    <!-- Recent Parents Table -->
    <div class="card mb-8">
      <div class="relative z-10">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-2xl font-bold text-gradient">Recent Parent Registrations</h3>
          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full">Last 10 entries</span>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gradient-to-r from-gray-50 to-gray-100">
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Contact</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Baby Timing</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Start</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Date</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% recentParents.forEach((parent, index) => { %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-indigo-600 flex items-center justify-center text-white font-semibold">
                      <%= parent.full_name.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= parent.full_name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= parent.email %></div>
                  <div class="text-sm text-gray-500"><%= parent.phone || 'No phone' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                  <%= parent.baby_timing || '-' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full
                    <% if (parent.start_timeframe === 'ASAP') { %>
                      bg-red-100 text-red-800
                    <% } else if (parent.start_timeframe.includes('weeks')) { %>
                      bg-yellow-100 text-yellow-800
                    <% } else { %>
                      bg-green-100 text-green-800
                    <% } %>
                  ">
                    <%= parent.start_timeframe %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= new Date(parent.created_at).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                    New
                  </span>
                </td>
              </tr>
              <% }) %>
              <% if (recentParents.length === 0) { %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="text-gray-400">
                    <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <p class="mt-2 text-sm">No registrations yet</p>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Recent Caregivers Table -->
    <div class="card">
      <div class="relative z-10">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-2xl font-bold text-gradient">Recent Caregiver Applications</h3>
          <span class="px-3 py-1 bg-gold/20 text-gold-dark text-sm font-medium rounded-full">Last 10 entries</span>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gradient-to-r from-gray-50 to-gray-100">
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Contact</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Experience</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Certifications</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Availability</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% recentCaregivers.forEach((caregiver, index) => { %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gold to-gold-light flex items-center justify-center text-white font-semibold">
                      <%= caregiver.full_name.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= caregiver.full_name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= caregiver.email %></div>
                  <div class="text-sm text-gray-500"><%= caregiver.phone %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if (caregiver.years_experience) { %>
                    <div class="flex items-center">
                      <span class="text-sm font-semibold text-gray-900"><%= caregiver.years_experience %></span>
                      <span class="ml-1 text-sm text-gray-500">years</span>
                    </div>
                  <% } else { %>
                    <span class="text-sm text-gray-400">-</span>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-wrap gap-1">
                    <% if (caregiver.certs) { %>
                      <% caregiver.certs.split(',').slice(0, 2).forEach(cert => { %>
                        <span class="px-2 py-1 text-xs font-medium bg-blue-50 text-blue-700 rounded">
                          <%= cert.trim() %>
                        </span>
                      <% }) %>
                      <% if (caregiver.certs.split(',').length > 2) { %>
                        <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-600 rounded">
                          +<%= caregiver.certs.split(',').length - 2 %>
                        </span>
                      <% } %>
                    <% } else { %>
                      <span class="text-sm text-gray-400">None listed</span>
                    <% } %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full
                    <% if (caregiver.availability === 'Both' || caregiver.availability === 'Flexible') { %>
                      bg-green-100 text-green-800
                    <% } else { %>
                      bg-yellow-100 text-yellow-800
                    <% } %>
                  ">
                    <%= caregiver.availability %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= new Date(caregiver.created_at).toLocaleDateString() %>
                </td>
              </tr>
              <% }) %>
              <% if (recentCaregivers.length === 0) { %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <div class="text-gray-400">
                    <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <p class="mt-2 text-sm">No applications yet</p>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
// Add animation to cards on page load
document.addEventListener('DOMContentLoaded', function() {
  const cards = document.querySelectorAll('.card');
  cards.forEach((card, index) => {
    setTimeout(() => {
      card.classList.add('animate-fade-in');
    }, index * 100);
  });
});
</script>

<%- include('_footer') %>